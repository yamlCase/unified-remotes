<?xml version="1.0" encoding="utf-8"?>
<!-- <layout onLaunch="launch" onPause="pause"> -->
<layout color="956816">
  <grid>
    <row>
      <button icon="power" onTap="close" />
      <button icon="fullscreen" onTap="fullscreen" />
    </row>
    <row weight="0.5">
      <button text="CC\nprev" onTap="sub_prev" />
      <button text="CC" onTap="sub_toggle" />
      <button text="CC\nnext" onTap="sub_next" />
    </row>
    <row weight="0.5">
      <button text="slower" onTap="sub_slower" />
      <button text="faster" onTap="sub_faster" />
    </row>
    <row weight="0.5">
      <space />
    </row>
    <row weight="3">
      <grid>
        <row> <button icon="back" onTap="back" /> </row>
        <row> <button icon="left" onTap="left" /> </row>
        <row> <button icon="unlock" onTap="played_toggle" />  </row>
      </grid>

      <grid>
        <row> <button icon="up" onTap="up" /> </row>
        <row> <button icon="select" onTap="select" /> </row>
        <row> <button icon="down" onTap="down" /> </row>
      </grid>
      <grid>
        <row> <button icon="playpause" onTap="play_pause" /> </row>
        <row> <button icon="right" onTap="right" /> </row>
        <row> <button icon="stop" onTap="stop" /> </row>
      </grid>
      
    </row>
  </grid>
</layout>
